---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { screws } from '../../utils/data';
import type { Screw } from '../../types/fastener';

export function getStaticPaths() {
  return screws.map((screw) => ({
    params: { slug: screw.slug },
    props: { screw }
  }));
}

interface Props {
  screw: Screw;
}

const { screw } = Astro.props;

const title = `${screw.name} Specifications`;
const description = screw.description;

// Format dimension range for display
function formatRange(range: { min: number; max: number; unit: string } | undefined): string {
  if (!range) return 'N/A';
  return `${range.min}" - ${range.max}"`;
}

// Format drive type for display
function formatDriveType(drive: string | undefined): string {
  if (!drive) return 'N/A';
  return drive.charAt(0).toUpperCase() + drive.slice(1).replace(/-/g, ' ');
}

// Format head style for display
function formatHeadStyle(head: string | undefined): string {
  if (!head) return 'N/A';
  return head.charAt(0).toUpperCase() + head.slice(1).replace(/-/g, ' ');
}
---

<BaseLayout title={title} description={description}>
  <div class="max-w-6xl mx-auto px-4 py-8">
    <!-- Breadcrumb -->
    <nav class="mb-8 flex text-sm" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-2">
        <li>
          <a href="/" class="text-zinc-400 hover:text-zinc-100">Home</a>
        </li>
        <li class="text-zinc-600">/</li>
        <li>
          <a href="/screws" class="text-zinc-400 hover:text-zinc-100">Screws</a>
        </li>
        <li class="text-zinc-600">/</li>
        <li class="text-zinc-300">{screw.name}</li>
      </ol>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-8">
        <div>
          <h1 class="text-4xl font-bold mb-4">{screw.name}</h1>
          {screw.aliases && screw.aliases.length > 0 && (
            <p class="text-zinc-400 mb-4">Also known as: {screw.aliases.join(', ')}</p>
          )}
          <p class="text-lg text-zinc-300">{screw.description}</p>
        </div>

        <!-- Quick Specs -->
        <div class="border border-zinc-800 rounded-lg p-6 bg-zinc-900/50">
          <h2 class="text-xl font-semibold mb-4">Quick Specifications</h2>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div class="text-center">
              <p class="text-sm text-zinc-500 mb-1">Head Style</p>
              <p class="text-lg font-semibold">{formatHeadStyle(screw.headStyle)}</p>
            </div>
            <div class="text-center">
              <p class="text-sm text-zinc-500 mb-1">Drive Type</p>
              <p class="text-lg font-semibold">{formatDriveType(screw.driveType)}</p>
            </div>
            <div class="text-center">
              <p class="text-sm text-zinc-500 mb-1">Thread Type</p>
              <p class="text-lg font-semibold">{formatDriveType(screw.threadType)}</p>
            </div>
            {screw.pointType && (
              <div class="text-center">
                <p class="text-sm text-zinc-500 mb-1">Point Type</p>
                <p class="text-lg font-semibold">{formatDriveType(screw.pointType)}</p>
              </div>
            )}
          </div>
        </div>

        <!-- Dimensions -->
        <div class="border border-zinc-800 rounded-lg p-6 bg-zinc-900/50">
          <h2 class="text-xl font-semibold mb-4">Dimensions</h2>
          <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {screw.diameterRange && (
              <div>
                <dt class="text-sm text-zinc-500">Diameter Range</dt>
                <dd class="text-lg">{formatRange(screw.diameterRange)}</dd>
              </div>
            )}
            {screw.lengthRange && (
              <div>
                <dt class="text-sm text-zinc-500">Length Range</dt>
                <dd class="text-lg">{formatRange(screw.lengthRange)}</dd>
              </div>
            )}
            <div>
              <dt class="text-sm text-zinc-500">Measurement System</dt>
              <dd class="text-lg">{screw.measurementSystem.map(s => s.charAt(0).toUpperCase() + s.slice(1)).join(', ')}</dd>
            </div>
          </dl>
        </div>

        <!-- Materials -->
        <div class="border border-zinc-800 rounded-lg p-6 bg-zinc-900/50">
          <h2 class="text-xl font-semibold mb-4">Available Materials</h2>
          <div class="flex flex-wrap gap-2">
            {screw.materials.map((material) => (
              <span class="px-3 py-1 rounded-full bg-zinc-800 text-zinc-300 text-sm">
                {material.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}
              </span>
            ))}
          </div>
        </div>

        <!-- Standards -->
        {screw.standards && screw.standards.length > 0 && (
          <div class="border border-zinc-800 rounded-lg p-6 bg-zinc-900/50">
            <h2 class="text-xl font-semibold mb-4">Standards</h2>
            <div class="flex flex-wrap gap-2">
              {screw.standards.map((standard) => (
                <span class="px-3 py-1 rounded border border-zinc-700 text-zinc-300 text-sm font-mono">
                  {standard}
                </span>
              ))}
            </div>
          </div>
        )}
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Applications -->
        <div class="border border-zinc-800 rounded-lg p-6 bg-blue-950/30">
          <h3 class="text-lg font-semibold mb-4">Common Applications</h3>
          <ul class="space-y-2 text-zinc-300">
            {screw.applications.map((app) => (
              <li class="flex items-start gap-2">
                <span class="text-green-500 mt-1">+</span>
                <span>{app}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- Not Recommended -->
        {screw.notRecommendedFor && screw.notRecommendedFor.length > 0 && (
          <div class="border border-zinc-800 rounded-lg p-6 bg-red-950/20">
            <h3 class="text-lg font-semibold mb-4">Not Recommended For</h3>
            <ul class="space-y-2 text-zinc-300">
              {screw.notRecommendedFor.map((item) => (
                <li class="flex items-start gap-2">
                  <span class="text-red-500 mt-1">-</span>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          </div>
        )}

        <!-- Related Fasteners -->
        {screw.relatedFasteners && screw.relatedFasteners.length > 0 && (
          <div class="border border-zinc-800 rounded-lg p-6 bg-zinc-900/50">
            <h3 class="text-lg font-semibold mb-4">Related Fasteners</h3>
            <div class="flex flex-wrap gap-2">
              {screw.relatedFasteners.map((slug) => (
                <a href={`/screws/${slug}`} class="px-3 py-1 rounded bg-zinc-800 text-primary-400 hover:bg-zinc-700 text-sm transition-colors">
                  {slug.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}
                </a>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
</BaseLayout>
