---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { washers } from '../../utils/data';
import type { Washer } from '../../types/fastener';

export function getStaticPaths() {
  return washers.map((washer) => ({
    params: { slug: washer.slug },
    props: { washer }
  }));
}

interface Props {
  washer: Washer;
}

const { washer } = Astro.props;

const title = `${washer.name} Specifications`;
const description = washer.description;

// Format dimension range for display
function formatRange(range: { min: number; max: number; unit: string } | undefined): string {
  if (!range) return 'N/A';
  return `${range.min}" - ${range.max}"`;
}

// Format washer type for display
function formatWasherType(type: string | undefined): string {
  if (!type) return 'N/A';
  return type.charAt(0).toUpperCase() + type.slice(1).replace(/-/g, ' ');
}
---

<BaseLayout title={title} description={description}>
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Product",
    "name": washer.name,
    "description": washer.description,
    "category": "Fastener > Washer",
    "material": washer.materials.map(m => m.replace(/-/g, ' ')).join(', '),
    "additionalProperty": [
      {
        "@type": "PropertyValue",
        "name": "Washer Type",
        "value": washer.washerType
      },
      ...(washer.innerDiameterRange ? [{
        "@type": "PropertyValue",
        "name": "Inner Diameter Range",
        "value": `${washer.innerDiameterRange.min}" - ${washer.innerDiameterRange.max}"`
      }] : []),
      ...(washer.outerDiameterRange ? [{
        "@type": "PropertyValue",
        "name": "Outer Diameter Range",
        "value": `${washer.outerDiameterRange.min}" - ${washer.outerDiameterRange.max}"`
      }] : []),
      ...(washer.thicknessRange ? [{
        "@type": "PropertyValue",
        "name": "Thickness Range",
        "value": `${washer.thicknessRange.min}" - ${washer.thicknessRange.max}"`
      }] : [])
    ]
  })} />

  <div class="max-w-6xl mx-auto px-4 py-8">
    <!-- Breadcrumb -->
    <nav class="mb-8 flex text-sm" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-2">
        <li>
          <a href="/" class="text-zinc-400 hover:text-zinc-100">Home</a>
        </li>
        <li class="text-zinc-600">/</li>
        <li>
          <a href="/washers" class="text-zinc-400 hover:text-zinc-100">Washers</a>
        </li>
        <li class="text-zinc-600">/</li>
        <li class="text-zinc-300">{washer.name}</li>
      </ol>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-8">
        <div>
          <h1 class="text-4xl font-bold mb-4">{washer.name}</h1>
          {washer.aliases && washer.aliases.length > 0 && (
            <p class="text-zinc-400 mb-4">Also known as: {washer.aliases.join(', ')}</p>
          )}
          <p class="text-lg text-zinc-300">{washer.description}</p>
        </div>

        <!-- Quick Specs -->
        <div class="border border-zinc-800 rounded-lg p-6 bg-zinc-900/50">
          <h2 class="text-xl font-semibold mb-4">Quick Specifications</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            <div class="text-center">
              <p class="text-sm text-zinc-500 mb-1">Washer Type</p>
              <p class="text-lg font-semibold">{formatWasherType(washer.washerType)}</p>
            </div>
            <div class="text-center">
              <p class="text-sm text-zinc-500 mb-1">Category</p>
              <p class="text-lg font-semibold">Washer</p>
            </div>
            <div class="text-center">
              <p class="text-sm text-zinc-500 mb-1">Measurement</p>
              <p class="text-lg font-semibold">{washer.measurementSystem.map(s => s.charAt(0).toUpperCase() + s.slice(1)).join(', ')}</p>
            </div>
          </div>
        </div>

        <!-- Dimensions -->
        <div class="border border-zinc-800 rounded-lg p-6 bg-zinc-900/50">
          <h2 class="text-xl font-semibold mb-4">Dimensions</h2>
          <dl class="grid grid-cols-1 md:grid-cols-3 gap-4">
            {washer.innerDiameterRange && (
              <div>
                <dt class="text-sm text-zinc-500">Inner Diameter (ID)</dt>
                <dd class="text-lg">{formatRange(washer.innerDiameterRange)}</dd>
              </div>
            )}
            {washer.outerDiameterRange && (
              <div>
                <dt class="text-sm text-zinc-500">Outer Diameter (OD)</dt>
                <dd class="text-lg">{formatRange(washer.outerDiameterRange)}</dd>
              </div>
            )}
            {washer.thicknessRange && (
              <div>
                <dt class="text-sm text-zinc-500">Thickness</dt>
                <dd class="text-lg">{formatRange(washer.thicknessRange)}</dd>
              </div>
            )}
          </dl>
        </div>

        <!-- Materials -->
        <div class="border border-zinc-800 rounded-lg p-6 bg-zinc-900/50">
          <h2 class="text-xl font-semibold mb-4">Available Materials</h2>
          <div class="flex flex-wrap gap-2">
            {washer.materials.map((material) => (
              <span class="px-3 py-1 rounded-full bg-zinc-800 text-zinc-300 text-sm">
                {material.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}
              </span>
            ))}
          </div>
        </div>

        <!-- Standards -->
        {washer.standards && washer.standards.length > 0 && (
          <div class="border border-zinc-800 rounded-lg p-6 bg-zinc-900/50">
            <h2 class="text-xl font-semibold mb-4">Standards</h2>
            <div class="flex flex-wrap gap-2">
              {washer.standards.map((standard) => (
                <span class="px-3 py-1 rounded border border-zinc-700 text-zinc-300 text-sm font-mono">
                  {standard}
                </span>
              ))}
            </div>
          </div>
        )}
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Applications -->
        <div class="border border-zinc-800 rounded-lg p-6 bg-blue-950/30">
          <h3 class="text-lg font-semibold mb-4">Common Applications</h3>
          <ul class="space-y-2 text-zinc-300">
            {washer.applications.map((app) => (
              <li class="flex items-start gap-2">
                <span class="text-green-500 mt-1">+</span>
                <span>{app}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- Not Recommended -->
        {washer.notRecommendedFor && washer.notRecommendedFor.length > 0 && (
          <div class="border border-zinc-800 rounded-lg p-6 bg-red-950/20">
            <h3 class="text-lg font-semibold mb-4">Not Recommended For</h3>
            <ul class="space-y-2 text-zinc-300">
              {washer.notRecommendedFor.map((item) => (
                <li class="flex items-start gap-2">
                  <span class="text-red-500 mt-1">-</span>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          </div>
        )}

        <!-- Related Fasteners -->
        {washer.relatedFasteners && washer.relatedFasteners.length > 0 && (
          <div class="border border-zinc-800 rounded-lg p-6 bg-zinc-900/50">
            <h3 class="text-lg font-semibold mb-4">Related Fasteners</h3>
            <div class="flex flex-wrap gap-2">
              {washer.relatedFasteners.map((slug) => (
                <a href={`/washers/${slug}`} class="px-3 py-1 rounded bg-zinc-800 text-primary-400 hover:bg-zinc-700 text-sm transition-colors">
                  {slug.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}
                </a>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
</BaseLayout>
